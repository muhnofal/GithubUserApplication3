<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.githubuserapplication3">

    <permission
        android:name="com.example.githubuserapplication3.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.githubuserapplication3.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <queries>
        <package android:name="com.example.githubuserapplication3" />
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@drawable/github_mark_light_32px"
        android:label="Github User Name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserApplication2">

        <receiver
            android:name=".alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true"/>

        <activity android:name=".ReminderActivity" />
        <activity android:name=".FavoriteUserDetailActivity" />
        <activity android:name=".FavoriteUserActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserDetailActivity" />
        <activity android:name=".MainActivity" />

        <provider
            android:name=".provider.GithubUserProvider"
            android:authorities="com.example.githubuserapplication3"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.githubuserapplication3.READ_DATABASE"
            android:writePermission="com.example.githubuserapplication3.WRITE_DATABASE" />
    </application>

</manifest>