<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.githubuserapplication3">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.dicoding.mynotesapp.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.dicoding.mynotesapp.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/github_mark_light_32px"
        android:label="Github User Name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserApplication2">
        <provider
            android:name=".GithubUserProvider"
            android:authorities="com.example.githubuserapplication3"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.githubuserapplication3.READ_DATABASE"
            android:writePermission="com.example.githubuserapplication3.WRITE_DATABASE">
        </provider>

        <activity android:name=".FavoriteUserDetailActivity" />
        <activity android:name=".FavoriteUserActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserDetailActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>